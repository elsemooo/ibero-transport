---
import Image from "astro/components/Image.astro";

const { img, titulo, descripcion } = Astro.props;
---

<div class="flex flex-col items-center">
  <Image
    class="h-full max-h-[90svh] w-auto object-cover"
    src={img}
    inferSize
    alt=""
  />
  <p class="text-4xl mb-5 mt-10 text-center">{titulo}</p>
  <p class="text-2xl text-center max-w-[1100px]">{descripcion}</p>
</div>
