---
import Image from "astro/components/Image.astro";
import logo from "./../../public/logo.png";
---

<header class="bg-primary-claro px-5 relative z-50">
  <div
    class="relative mx-auto flex flex-col py-4 justify-between lg:flex-row lg:items-center lg:justify-around"
  >
    <Image src={logo} class="w-48" alt="logo" loading="eager" />
    <input
      type="checkbox"
      id="navbar-open"
      class="hidden peer"
      aria-hidden="true"
    />
    <label
      class="absolute right-0 top-2 cursor-pointer lg:hidden"
      for="navbar-open"
    >
      <span class="sr-only">Toggle Navigation</span>
      <svg
        class="size-16"
        xmlns="http://www.w3.org/2000/svg"
        height="24px"
        viewBox="0 -960 960 960"
        width="24px"
        fill="#042279"
        ><path
          d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"
        ></path></svg
      >
    </label>
    <nav
      aria-label="Header Navigation"
      class="peer-checked:block bg-primary-claro hidden pl-2 py-6 lg:block lg:py-0 z-50"
    >
      <ul
        class="flex flex-col lg:flex-row gap-y-4 gap-x-8 text-2xl text-white font-semibold font-primary"
      >
        <li class="">
          <a class="" href="/">Inicio</a>
        </li>
        <li class="">
          <a class="" href="/servicios">Servicios</a>
        </li>
        <li class="">
          <a class="" href="/sobre-nosotros">Sobre nosotros</a>
        </li>
        <li class="">
          <a class="" href="/flota">Flota</a>
        </li>
        <li class="">
          <a class="" href="/contacto">Contacto</a>
        </li>
      </ul>
    </nav>
  </div>
</header>
